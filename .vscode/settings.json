{
    "Lua.diagnostics.disable": [
        "trailing-space",
        "lowercase-global",
        "undefined-global",
        "duplicate-set-field",
        "undefined-field"
    ],
    "Lua.completion.showWord": "Disable",
    "Lua.workspace.library": [
        "datafiles/data/?.lua"
    ],
    "Lua.completion.keywordSnippet": "Both",
    "Lua.hint.enable": false,
    "Lua.hint.paramName": "Literal",
    "Lua.hint.paramType": false,
    "Lua.hint.semicolon": "SameLine",
    "gml-ls.userGlobals": {
        "functions": {
            "DamageEvent": {
                "description": "Invokes a damage event using a DamageEventContext to determine conditions.",
                "parameters": [
                    {
                        "label": "ctx",
                        "type": "DamageEventContext"
                    }
                ]
            }
        },
        "macros": {
            "SC_W": {
                "description": "The unscaled width of the screen in pixels"
            },
            "SC_H": {
                "description": "The unscaled height of the screen in pixels"
            }
        }
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/scripts/__scribble_*/**": true
    }
}
